              </div>

              <div class = "foodcard-parent">
                <div class = "foodcard img9"></div>
                <p class = "foodcard__description">Lorem Ipsum</p>
                <p class = "foodcard__description"><b>$100.00</b></p>
              </div>
            </div>
          </div>
        </div>

        <div class = "card-changer-badge">
          <p>
            <span class = "badge" onclick = "changeCard('1')"></span>
            <span class = "badge" onclick = "changeCard('2')"></span>
            <span class = "badge" onclick = "changeCard('3')"></span>
          </p>
        </div>
      </section>
    </div>

    <!-- GET TOGETHER panel -->
    <!-- This panel is above BOOKING TABLE panel -->

    <div class = "get-together-container">
        <p class = "get-together-text">--- GET TOGETHER ---</p>
    </div>


    <div class = "content-container">
      <!-- BOOK A TABLE SECTION -->
      <div class = "booking-container">

        <!-- heading of booking table section -->
        <header class = "container__header">
          <p class = "header__headline" onmouseover="increaseHr('js-head_hr-2')" onmouseout="decreaseHr('js-head_hr-2')">Book a Table</p>
          <hr class = "header__hr" id = "js-head_hr-2">
        </header>

        <!-- section starts of booking table -->
        <section class = "container__body">
          <!-- Inline block row -->
          <div class = "row-book">
            <!-- Chef image -->
            <div class = "chef-image">
              <img src = "Images/chef-image-2.jpg" class = "chef">
            </div>

            <!-- Form panel starts -->
            <div class = "form-side">
              <div class = "super-parent">
                <div class = "form-parent">
                  <form action="get" id = "contact-form">
                    <label>Enter name:</label>
                    <input type="text" name = "name" value="" placeholder="Name" id = "name" required>

                    <br><br>

                    <label>Enter contact no:</label>
                    <input type="text" name="contact-no" value="" placeholder="Contact No" id = "contact">

                    <br><br>

                    <label>Date:</label>
                    <input type = "text" name="date" value="" placeholder="Date" id = "date">

                    <br><br>

                    <label>Enter number of people:</label>
                    <input type="number" name = "no-of-people" value = "" placeholder="No. of People" id = "noOfPeople" required>

                    <br><br>

                    <label>Enter email:</label>
                    <input placeholder="Email" id = "email" name = "email">

                    <br><br>

                    <button type = "submit" id = "submit_button" class = "ripple panel" style = "width: 200px; margin: auto; display: block; z-index: 1;";>
                      BOOK
                    </button>

                  </form>
                </div>
              </div>
            </div>
          </div>

        </section>
      </div>
    </div>

    
    <script src="https://www.gstatic.com/firebasejs/4.9.0/firebase.js"></script>
    <script src = "resources/js/script.js"></script>
    <script src = "resources/js/firebase.js"></script>

    <script>
      $( function () {
        $("#date").datepicker();
      })
    </script>
  </body>
</html>
